<p id="notice"><%= notice %></p>

<%= button_to 'Apply Discount', discount_path, method: :get %>

<h1>Listing Movies</h1>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Poster</th>
      <th>Trailer</th>
      <th>Price</th>
      <th>Released on</th>
      <th>Rating</th>
      <th>Genre</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @movies.each do |movie| %> 
      <tr>
        <td><%= movie.title %></td>
         <td><%= image_tag movie.poster, :size => '50x50' %></td>
        <td><%= movie.trailer %></td>
        <td><%= euro(movie.price) %></td>
        <td><%= movie.released_on %></td>
        <td><%= movie.rating %></td>
        <td><%= movie.genre.name%></td>

        <td><%= link_to "Download File ", movie.attachment_url %></td>
        <td><%= link_to 'Show', movie %></td>
        <td><%= link_to 'Edit', edit_movie_path(movie) %></td>
        <td><%= link_to 'Destroy', movie, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Movie', new_movie_path %>
